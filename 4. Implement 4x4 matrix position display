#include <stdio.h>

int main() {
    int matrix[4][4];
    printf("Enter elements for 4x4 matrix:\n");

    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++) {
            printf("Enter element at position (%d,%d): ", i, j);
            scanf("%d", &matrix[i][j]);
        }
    }

    printf("\n4x4 Matrix:\n");
    for (int i = 0; i < 4; i++) {
        for (int j = 0; j < 4; j++) {
            printf("%3d ", matrix[i][j]);
        }
        printf("\n");
    }

    return 0;
}
